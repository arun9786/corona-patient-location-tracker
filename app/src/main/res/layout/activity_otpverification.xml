<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPverification"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/otpverification_page_theme">

    <TextView
        android:layout_marginTop="10dp"
        android:text=" Corona Awarness App "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:textColor="#FDEB46"
        android:textDirection="inherit"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:text=" OTP Verification "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textDirection="inherit"
        android:textStyle="italic"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_marginTop="50dp"
        android:background="@drawable/signup_page_editext_backgrounds"
        android:textColorHint="#ffffff"
        android:id="@+id/otp"
        android:textColor="#ffffff"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:hint="  OTP"
        android:inputType="textPersonName"
        android:textSize="20dp"
        android:drawableLeft="@drawable/password_icon"
        android:layout_marginBottom="15dp"/>

    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/login"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:onClick="verify"
        android:textSize="25dp"
        android:text="Verify Otp"
        android:background="@drawable/button_login_page_background"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/signup"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:onClick="resend"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:text="Resend Otp"
        android:background="@drawable/button_signup_loginpage_background" />




</LinearLayout>