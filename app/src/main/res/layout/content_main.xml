<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_main"
    android:background="#1133EC">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="2dp"
            android:id="@+id/date"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:text="Date"
            android:textColor="#5971F5"
            android:textStyle="bold"
            android:background="@drawable/button_mainactivity_background"/>
        <TextView
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:id="@+id/time"
            android:layout_width="355dp"
            android:layout_height="40dp"
            android:text="Time"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#5971F5"
            android:background="@drawable/button_mainactivity_background"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="13"
                android:columnCount="2"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="165dp"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageButton
                        android:onClick="world_corona"
                        android:layout_width="165dp"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/world_corona_pic"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="World"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="165dp"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageButton
                        android:onClick="india_corona"
                        android:layout_width="165dp"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/india_corona_pic"
                        />
                    <TextView
                        android:gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:text="India"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="165dp"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="165dp"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/world_corona_pic"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="World"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="165dp"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="165dp"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/india_corona_pic"
                        android:onClick="self_checking"
                        />
                    <TextView
                        android:gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="32dp"
                        android:textSize="19dp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:text="Self Checking"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="165dp"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="165dp"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/world_corona_pic"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="World"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="165dp"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="165dp"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/india_corona_pic"
                        />
                    <TextView
                        android:gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:text="India"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="165dp"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="165dp"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/world_corona_pic"
                        android:onClick="doctor"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:text="World"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="165dp"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="165dp"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/india_corona_pic"
                        />
                    <TextView
                        android:gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:text="India"/>
                </LinearLayout>

            </GridLayout>

        </HorizontalScrollView>

    </ScrollView>

</LinearLayout>